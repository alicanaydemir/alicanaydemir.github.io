<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="11dp"
    android:paddingEnd="22dp"
    android:paddingStart="22dp"
    android:paddingTop="11dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardV_main"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textVPlot_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textVDate_main"
                android:layout_below="@+id/textVDate_main"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textVDate_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textVTitle_main"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageV_main"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textVTitle_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/imageV_main"
                android:singleLine="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageV_main"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>